<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BakeryOnline_MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/BakeryOnline_MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        /* Style css Index - HomeController */
        .home-header-dropdown .nav-link {
            color:black;
        }

        .home-header-dropdown .nav-link:hover {
            color: #c14679;
            transform:scale(1.1);
        }

        .banner-text {
            position: absolute;
            top: 10%;
            left: 10%;
            color: #333;
        }

        .banner-text h1 {
            font-size: 6rem;
            font-weight: normal;
            font-family: 'Pacifico', cursive;
            color: #c14679;
            text-shadow: 0 1px 1px rgba(0, 0, 0, 0.1), 0 2px 2px rgba(0, 0, 0, 0.1), 0 3px 3px rgba(0, 0, 0, 0.2), 0 4px 4px rgba(0, 0, 0, 0.2);
        }

        .banner-text h2 {
            font-size: 2.5rem;
            font-family: 'Arial Black', sans-serif; 
            letter-spacing: 0.5rem;
            color: #000;
            text-shadow: 0 1px 1px rgba(0, 0, 0, 0.1), 0 2px 2px rgba(0, 0, 0, 0.1), 0 3px 3px rgba(0, 0, 0, 0.2), 0 4px 4px rgba(0, 0, 0, 0.2);
        }

        .banner-text p {
            font-size: 1rem;
            font-family: 'Open Sans', sans-serif;
            letter-spacing: 0.2rem;
            line-height: 1.5rem;
            color: #777;
            text-shadow: 0 1px 1px rgba(0, 0, 0, 0.1), 0 2px 2px rgba(0, 0, 0, 0.1);
        }

        .shop-now-btn {
            background-color: #c14679;
            font-family: 'Roboto', sans-serif;
            font-weight: bold;
            border: none;
            color: white;
            padding: 10px 20px;
            font-size: 1rem;
            cursor: pointer;
            padding: 1.5rem 2.5rem;
            text-transform: uppercase;
            box-shadow: 0px 1px 2px #b6b1b1e0;
            transition: all 0.5s;
        }

        .shop-now-btn:hover {
            letter-spacing: 2px;
            transform: scaleY(1.1);
        }

        .btn-shop-now-hover::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgb(0 0 0 / 17%); 
            opacity: 0;
            transition: opacity 0.5s; 
        }

        .btn-shop-now-hover:hover::before {
            opacity: 0.8; /* Hiện nền đen mờ khi hover */
        }

        /*                                                              */
        .title-category {
            position: relative;
            display: inline-block;
            font-size: 2rem;
            font-weight: bold;
        }

        .title-category::before{
            content: '';
            position: absolute;
            top: 40%;
            left: -17rem;
            width: 15rem;
            height: 1.2rem;
            background: #c14679;
            border-radius: 4rem;
        }

        .title-category::after{
            content: '';
            position: absolute;
            top: 40%;
            right: -17rem;
            width: 15rem;
            height: 1.2rem;
            background: #c14679;
            border-radius: 4rem;
        }

        .effect-title-category::before {
            content: "";
            position: absolute;
            left: -4rem;
            top: -25%;
            background-color: white;
            width: 2.5rem;
            height: 5rem;
            border-radius: 50%;
        }

        .effect-title-category::after {
            content: "";
            position: absolute;
            right: -4rem;
            top: -25%;
            background-color: white;
            width: 2.5rem;
            height: 5rem;
            border-radius: 50%;
            z-index: 1;
        }

        #home-header-dropdown-effect:hover .home-header-dropdown-menu {
            display: block;
        }

        .home-header-dropdown-menu {
            display: none;
            position: absolute;
            z-index: 1;
            list-style: none;
            background-color: white;
            box-shadow: 0px 2px 3px #3a3737;
            border-radius: 8px;
            width: 20rem;
        }

        .home-header-dropdown-menu .home-header-dropdown-item {
            display: inline-block;
            text-decoration: none;
            width: 100%;
            height: 30px;
            color: black;
        }

        .home-header-dropdown-menu .home-header-dropdown-item:hover {
            padding-left: 10px;
            border-radius:5px;
            box-shadow: 0px 2px 5px #3a3737;
            color: #c14679;
            transform: scale(1.05); 
        }
        /*            Acion Index -   CategoryController                    */
         .custom-checkbox input[type="checkbox"] {
            appearance: none;
            -webkit-appearance: none;
            width: 20px;
            height: 20px;
            background: #fff;
            border: 1px solid #ccc;
            border-radius: 3px;
            position: relative;
            cursor: pointer;
            outline: none;
        }

        .custom-checkbox input[type="checkbox"]:checked {
            background-color: white;
            border-color: gray;
            box-shadow: inset 0px 0px 4px #4a4646d4;
        }

        .custom-checkbox input[type="checkbox"]:checked::before {
            content: '\2713'; /* Check mark character */
            color: gray;
            position: absolute;
            left: 4px;
            top: 0;
            font-size: 18px;
            line-height: 20px;
	   
        }

        .custom-checkbox label {
            margin-left: 8px;
            cursor: pointer;
        }

        .page-number {
            width: 2rem;
            background-color: pink;
            cursor: pointer;
            user-select: none;
        }

        .page-number:hover {
            background-color: greenyellow;
        }

        /* Menu User - header */
        .menu-user {
            display: none;
            position: absolute;
            right:0;
            width: 10rem;
            box-shadow: 0px 2px 3px #3a3737;
            border-radius: 8px;
            z-index: 1;
            background-color: white;
        }

        .menu-user li {
            display: inline-block;
            list-style: none;
            width: 100%;
            cursor: pointer;
        }
        .menu-user li:hover {
            color: lightgray;
            opacity: 0.7;
        }

        .menu-user li a {
            text-decoration: none;
            color: black;
        }

        .trigger-menu_user:hover .menu-user {
            display: block;
        }
    </style>
</head>
<body>
    <header>
        <div class="container-fluid">
            <div class="row d-flex justify-content-between p-3" style="box-shadow:-1px 1px 3px #dee2e6">
                <div class="col-2">
                    <a asp-action="Index" asp-controller="Home" class="d-block ms-4">
                        <img src="~/logo.png" alt="Logo Bakery" class="img-fluid" />
                    </a>
                </div>
                <div class="col-3 d-flex align-items-center">
                    <form class="d-flex mt-2 w-100" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-black">
            <div class="container-fluid">
                <div class="collapse navbar-collapse justify-content-between" id="navbarNavDropdown">
                    <ul class="navbar-nav ms-2 gap-4">
                        <li class="nav-item home-header-dropdown">
                            <a class="nav-link fs-5 text-center" asp-action="Index" asp-controller="Home">Home</a>
                        </li>
                        <li id="home-header-dropdown-effect" class="nav-item home-header-dropdown position-relative">
                            <a class="nav-link fs-5 text-center" asp-action="Index" asp-controller="Category">Category</a>
                            <ul class="home-header-dropdown-menu p-3">
                                <li>
                                    <a class="home-header-dropdown-item" asp-action="Index" asp-controller="Category" asp-route-name="Cakes">Cakes</a>
                                </li>
                                <li><a class="home-header-dropdown-item" asp-action="Index" asp-controller="Category" asp-route-name="Desserts">Desserts</a></li>
                            </ul>
                        </li>
                    </ul>

                    <ul class="navbar-nav gap-3 me-5">
                        @if(User.IsInRole("Admin"))
                        {
                            <li class="nav-item home-header-dropdown" style="width: 4rem;">
                                <a class="nav-link fs-5 text-center home-header-dropdown-item" asp-area="Admin" asp-controller="AdminPanel" asp-action="Home">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-gear d-inline-block" viewBox="0 0 16 16">
                                        <path d="M8 4.754a3.246 3.246 0 1 0 0 6.492 3.246 3.246 0 0 0 0-6.492M5.754 8a2.246 2.246 0 1 1 4.492 0 2.246 2.246 0 0 1-4.492 0" />
                                        <path d="M9.796 1.343c-.527-1.79-3.065-1.79-3.592 0l-.094.319a.873.873 0 0 1-1.255.52l-.292-.16c-1.64-.892-3.433.902-2.54 2.541l.159.292a.873.873 0 0 1-.52 1.255l-.319.094c-1.79.527-1.79 3.065 0 3.592l.319.094a.873.873 0 0 1 .52 1.255l-.16.292c-.892 1.64.901 3.434 2.541 2.54l.292-.159a.873.873 0 0 1 1.255.52l.094.319c.527 1.79 3.065 1.79 3.592 0l.094-.319a.873.873 0 0 1 1.255-.52l.292.16c1.64.893 3.434-.902 2.54-2.541l-.159-.292a.873.873 0 0 1 .52-1.255l.319-.094c1.79-.527 1.79-3.065 0-3.592l-.319-.094a.873.873 0 0 1-.52-1.255l.16-.292c.893-1.64-.902-3.433-2.541-2.54l-.292.159a.873.873 0 0 1-1.255-.52zm-2.633.283c.246-.835 1.428-.835 1.674 0l.094.319a1.873 1.873 0 0 0 2.693 1.115l.291-.16c.764-.415 1.6.42 1.184 1.185l-.159.292a1.873 1.873 0 0 0 1.116 2.692l.318.094c.835.246.835 1.428 0 1.674l-.319.094a1.873 1.873 0 0 0-1.115 2.693l.16.291c.415.764-.42 1.6-1.185 1.184l-.291-.159a1.873 1.873 0 0 0-2.693 1.116l-.094.318c-.246.835-1.428.835-1.674 0l-.094-.319a1.873 1.873 0 0 0-2.692-1.115l-.292.16c-.764.415-1.6-.42-1.184-1.185l.159-.291A1.873 1.873 0 0 0 1.945 8.93l-.319-.094c-.835-.246-.835-1.428 0-1.674l.319-.094A1.873 1.873 0 0 0 3.06 4.377l-.16-.292c-.415-.764.42-1.6 1.185-1.184l.292.159a1.873 1.873 0 0 0 2.692-1.115z" />
                                    </svg>
                                </a>
                            </li>
                        }

                        <li class="nav-item home-header-dropdown" style="width: 4rem;">
                            <a class="nav-link fs-5 text-center" asp-controller="Home" asp-action="Index">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 0 0-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 0 0-16.536-1.84M7.5 14.25 5.106 5.272M6 20.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Zm12.75 0a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z" />
                                </svg>
                            </a>
                        </li>

                        <li class="nav-item home-header-dropdown position-relative trigger-menu_user" style="width: 4rem;">
                            <partial name="MenuUserDropdownPartial" />
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
   <main>
       @RenderBody()
   </main>
   <footer>
       <hr />
       <div class="container-fluid mt-4">
           <div class="row text-center">
               <div class="col">
                   <h5>Categores</h5>
               </div>

                <div class="col">
                   <h5>Follow Us</h5>
               </div>

                <div class="col">
                    <h5>Information</h5>
                </div>

                <div class="col">
                    <h5>Terms and Cookies</h5>
                </div>
           </div>
       </div>
   </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
