<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/BakeryOnline_MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .arrow-down {
            display: inline-block;
            transition: transform 0.3s ease;
        }
        .arrow-active {
            transform: rotate(180deg);  
        }

        .sb-nav-item a {
            display: inline-block;
            width: 100%;
            padding: 8px;
        }

        ul .sb-nav-item a{
            text-decoration: none;
            color: #858c85;
        }

        ul .sb-nav-item {
            list-style: none;
        }

        ul .sb-nav-item:hover a{
            color: white;
        }

        #newRoleForm {
            display: none;
        }

        /* Menu User trang  - header */
        .menu-user {
            display: none;
            position: absolute;
            right: 0;
            width: 10rem;
            box-shadow: 0px 2px 3px #3a3737;
            border-radius: 8px;
            z-index: 1;
            background-color: white;
        }

        .menu-user li {
            display: inline-block;
            list-style: none;
            width: 100%;
            cursor: pointer;
        }

        .menu-user li:hover {
            color: lightgray;
            opacity: 0.7;
        }
        
        .menu-user li a {
            text-decoration: none;
            color: black;
        }
        
        .trigger-menu_user:hover .menu-user {
            display: block;
        }

        /* area = admin, controller = user , action = index màu nền cho số page hiện tại*/
        .active-page {
            background-color: #ced4da;
        }

        /* area = admin, controller = product , action = index*/
        #MessProduct {
            display: none;
        }

        .Message {
            display: none; 
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row vh-100">
            <nav class="col-md-3 col-lg-2 bg-dark">
                <div class="py-3 px-2" style="background-color: #212529; height: 100%;border-top-right-radius: 5px; border-bottom-right-radius: 5px;">
                    <ul class="p-0">
                        <li class="sb-nav-item">
                            <a role="button" class="d-inline-block w-100" asp-area="" asp-controller="Home" asp-action="Index">
                                <span class="me-2"> <i class="fas fa-home"></i> </span>
                                Trang chủ
                            </a>
                        </li>
    
                        <li class="sb-nav-item">
                            <a role="button" class="d-inline-block w-100" asp-area="Admin" asp-controller="AdminPanel" asp-action="Home">
                                <span class="me-2"> <i class="fas fa-tachometer-alt"></i> </span>  Dashboard
                            </a>
                        </li>
    
                        <li class="sb-nav-item">
                            <a role="button" class="sb-nav-item d-inline-block w-100 position-relative text-start border-0 arrowContainer" data-bs-toggle="collapse" data-bs-target="#collapseOne"
                               aria-expanded="true" aria-controls="collapseOne">
                                Product & Category
                                <span class="position-absolute end-0">
                                    <svg class="arrow-down svg-inline--fa fa-chevron-down fa-w-14" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="chevron-down" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" data-fa-i2svg="">
                                        <path fill="currentColor" d="M207.029 381.476L12.686 187.132c-9.373-9.373-9.373-24.569 0-33.941l22.667-22.667c9.357-9.357 24.522-9.375 33.901-.04L224 284.505l154.745-154.021c9.379-9.335 24.544-9.317 33.901.04l22.667 22.667c9.373 9.373 9.373 24.569 0 33.941L240.971 381.476c-9.373 9.372-24.569 9.372-33.942 0z"</path>
                                    </svg>
                                </span>
                            </a>
                        </li>
                        <div id="collapseOne" class="accordion-collapse collapse">
                            <div class="accordion-body">
                                <ul class="p-0">
                                    <li class="sb-nav-item">
                                        <a asp-area="Admin" asp-controller="Product" asp-action="Index">Product Manage</a>
                                    </li>
                                    <li class="sb-nav-item">
                                        <a href="">Category Manage</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
    
                        <li class="sb-nav-item">
                            <a role="button" class="d-inline-block w-100" asp-area="Admin" asp-controller="Role" asp-action="Index">Role Manage</a>
                        </li>

                        <li class="sb-nav-item">
                            <a role="button" class="d-inline-block w-100" asp-area="Admin" asp-controller="User" asp-action="Index">User Manage</a>
                        </li>
                    </ul>
                </div>
            </nav>
            <main class="col-md-9 col-lg-10 py-2 px-3">
                <div class="d-flex justify-content-end mb-3 pe-3">
                    <ul class="navbar-nav">
                        <li class="nav-item home-header-dropdown position-relative trigger-menu_user" style="width: 3rem;">
                            <partial name="MenuUserDropdownPartial" />
                        </li>
                    </ul>
                </div>
               <div>
                    @RenderBody()
               </div>
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/fontawesome-5.15.4/js/all.js"></script>
    @await RenderSectionAsync("Scripts",required: false)
</body>
</html>
