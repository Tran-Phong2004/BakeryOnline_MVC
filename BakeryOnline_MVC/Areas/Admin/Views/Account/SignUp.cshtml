@model RegisterVM
@{
    ViewData["Title"] = "Dang ky";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row" style="height: 100vh;">
        <div class="col d-flex justify-content-center align-items-center">
            <form method="post" asp-area="Admin" asp-controller="Account" asp-action="SignUp" class="w-25">
                <div class="mb-4">
                    <a href="/">
                        <img src="~/logo.png" alt="logo" class="img-fluid" />
                    </a>
                </div>
                <div class="form-control py-5 px-3">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" asp-for="@Model.Username" placeholder="Username">
                        <label asp-for="@Model.Username">Username</label>
                        <span asp-validation-for="@Model.Username" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" asp-for="@Model.Email" placeholder="name@example.com">
                        <label asp-for="@Model.Email">Email address</label>
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <div class="position-relative form-floating">
                            <input type="password" class="form-control pe-5 password" asp-for="@Model.Password" placeholder="Password">
                            <span class="position-absolute end-0 top-50 translate-middle icon-eye">
                                <i class="bi bi-eye-slash"></i>
                            </span>
                            <label asp-for="@Model.Password">Password </label>
                        </div>
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <div class="position-relative form-floating">
                            <input type="password" class="form-control pe-5 passwordConfirm" asp-for="@Model.ConfirmPassword" placeholder="ConfirmPassword">
                            <span class="position-absolute end-0 top-50 translate-middle icon-eye">
                                <i class="bi bi-eye-slash"></i>
                            </span>
                            <label asp-for="@Model.ConfirmPassword">Confirm Password</label>
                       </div>
                        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div>
                        <a asp-area="Admin" asp-controller="Account" asp-action="Login" class="d-inline-block w-100 text-end">I have an account!</a>
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">Countinue</button>
                    </div>

                    <div class="mt-3">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

